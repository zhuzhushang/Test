<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/welfare_radius" />
            <gradient
                android:startColor="@color/welfare_gray"
                android:centerColor="@color/welfare_gray"
                android:centerY="0.75"
                android:endColor="@color/welfare_gray"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/welfare_radius" />
                <gradient
                    android:startColor="#80ffd300"
                    android:centerColor="#80ffb600"
                    android:centerY="0.75"
                    android:endColor="#a0ffcb00"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/welfare_radius" />
                <gradient
                    android:startColor="@color/welfare_dark_gold"
                    android:centerColor="@color/welfare_dark_gold"
                    android:centerY="0.75"
                    android:endColor="@color/welfare_dark_gold"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>